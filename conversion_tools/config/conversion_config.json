{
  "conversion_settings": {
    "max_parallel_jobs": 4,
    "resume_on_failure": true,
    "create_backups": true,
    "validate_conversions": true
  },
  "output_paths": {
    "extracted_vp": "extracted",
    "converted_assets": "assets",
    "textures": "assets/textures", 
    "models": "assets/models",
    "audio": "assets/audio",
    "missions": "assets/missions",
    "tables": "assets/tables",
    "scripts": "scripts",
    "scenes": "scenes",
    "resources": "resources"
  },
  "format_mappings": {
    "vp": {
      "target_format": "extracted_directory",
      "preserve_structure": true
    },
    "pof": {
      "target_format": "glb",
      "include_materials": true,
      "include_animations": true,
      "optimize_geometry": false
    },
    "dds": {
      "target_format": "png",
      "preserve_alpha": true,
      "handle_sequences": true,
      "generate_metadata": true
    },
    "pcx": {
      "target_format": "png",
      "preserve_transparency": true
    },
    "tga": {
      "target_format": "png",
      "preserve_alpha": true
    },
    "fs2": {
      "target_format": "tres",
      "convert_sexp": true,
      "preserve_structure": true
    },
    "tbl": {
      "target_format": "tres",
      "validate_references": true
    },
    "wav": {
      "target_format": "ogg",
      "compress": true,
      "quality": 0.8
    },
    "ogg": {
      "target_format": "ogg",
      "copy_only": true
    }
  },
  "validation_settings": {
    "check_file_integrity": true,
    "validate_references": true,
    "check_asset_dependencies": true,
    "generate_reports": true,
    "fail_on_missing_dependencies": false
  },
  "catalog_settings": {
    "auto_generate": true,
    "include_metadata": true,
    "create_search_index": true,
    "validate_relationships": true,
    "generate_thumbnails": false
  },
  "godot_integration": {
    "create_import_files": true,
    "update_project_settings": true,
    "organize_by_category": true,
    "create_preload_scripts": false
  },
  "logging": {
    "level": "INFO",
    "log_to_file": true,
    "log_file": "wcs_conversion.log",
    "include_timestamps": true,
    "max_log_size_mb": 50
  }
}